t = function(max = 100){
  num = 0;
  while(1+(max*0.5) > 1){
    
    max = max*0.5
    num = num +1
    
  }
  
  print("Epsilon en binario = 2^-", num, "\n")
  print("Epsilon en hexadecimal = ", max, "\n")
  
  sum = 1
  i = 1
  
  while(i<=1000){
    sum = sum + 0.40000000000
    i = i + 1
  }
  
  max = 10000 * 0.40000000000 + 1
  
  print("El error es  = ", sum)
}
t(1)
